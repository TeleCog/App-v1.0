ion-modal-view.vc-modal
    ion-header-bar
        button.button(ng-click="showChatFromVC()") Show Chat
        h1.title Video Conferencing
        .buttons
            button.button.button-clear(ng-click="closeVC()") Close
    ion-content
        div(ng-controller="VideoCtrl")
            opentok-container(user-id="{{user.id}}", user-name="{{user.first_name}}", agent-id="{{currentProvider ? currentProvider.provider.id : currentCustomer.id}}")
