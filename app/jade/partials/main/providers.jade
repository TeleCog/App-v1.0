ion-view(title="Providers")
    ion-nav-buttons(side="left")
        button.button.button-icon.icon.ion-navicon(menu-toggle="left")
    ion-nav-buttons(side="right")
        button.button(ng-click="signOut()")
            | Sign Out
    ion-content.has-header
        button.button.button-full.button-dark(style="margin-top:0", ng-click="showFiltersModal()")
            i.ion-funnel
        .provider-cards
            .list.card.provider-card(ng-repeat="provider in (filteredProviders || providers)")
                .item.item-avatar
                    h2 {{provider.provider.name}}
                    p {{provider.provider.type_abbr}} {{provider.provider.medical_specialty}}
                .item.item-image
                    img(src="http://livewiremedical.s3.amazonaws.com/uploads/provider/image/18/thumb_Mary_Lester.jpg")
